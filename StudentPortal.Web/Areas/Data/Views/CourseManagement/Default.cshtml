            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActiveFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActiveTo)
        </td>
