@model StudentPortal.Areas.Admin.ViewModels.RoleViewModel

@{
    ViewBag.Title = "User Roles";
}

<h2 class="page-header">User Roles for @(Model.UserName)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => Model.Id)

    for (int index = 0; index < Model.Roles.Count; index++)
    {
        <div class="form-group">
            @Html.EditorFor(model => Model.InRole[index])
            @Html.Label(Model.Roles[index])
        </div>
    }

    <div class="form-group block">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Default")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
